@{
    Layout = "_LayoutAccount";
}

@model SchoolManagementSystem.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h2 class="form-account-title text-center">Reset Your Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" class="form-account-bg-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Hidden token -->
            <input type="hidden" asp-for="Token" />

            <div class="form-group form-account-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="Password">New Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
            </div>

            <div class="form-group form-account-group">
                <input type="submit" value="Reset Password" class="btn btn-primary w-100" />
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center mt-3">
                @ViewBag.Message
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
